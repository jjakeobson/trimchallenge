<div class="container">
  <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>


  <% if notice %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <p id="notice"><%= notice %></p>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-sm-12">

      <div id="show-container">


        <%= form_for(@user) do |f| %>

          <div class="form-group">
            <%= f.text_field :name, class: "form-control disabled-field", placeholder: "FULL NAME" %>
          </div>
          <div class="form-group">
            <%= f.text_field :email, class: "form-control disabled-field", placeholder: "EMAIL" %>
          </div>
          <div class="form-group">
            <%= f.text_field :projectrepo, class: "form-control disabled-field", placeholder: "PROJECT REPO" %>
          </div>
          <div class="form-group">
            <%= f.text_field :projecturl, class: "form-control disabled-field", placeholder: "PROJECT URL" %>
          </div>

          
        <% end %>

      </div>
    </div>
  </div>
  <%= column_chart({"OOP" => @user.oopprac, "Modular Development" => @user.moddev,
    "Full Stack Workflow" => @user.fullstack, "Testing" => @user.testing,
    "Database Knowledge" => @user.dbknow, "Debugging" => @user.debug,
    "Problem Solving" => @user.problems, "JavaScript" => @user.js,
    "HTML" => @user.html, "CSS" => @user.css, "Teamwork" => @user.teamwork,
    "Self Motivation" => @user.motivation, "Communication" => @user.communication,
    "Energy-Level" => @user.energy, "Intelligence" => @user.intelligence}, stacked: true, height: "500px") %>


</div>
